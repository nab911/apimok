#!/usr/bin/env node

var server = require('../lib/server.js');
var spawn = require('child_process').spawn;

var argv = require('optimist')
	.usage('Run Jasmine tests with an Apimok server\nUsage: $0')
	.options({
		'w' : {
			alias: 'with',
			describe: 'Unit Testing framework to use. Currently only Jasmine support.',
			default: 'jasmine'
		},
		't' : {
			alias: 'target',
			describe: 'Target relative url for PhantomJs to run test suite',
			demand: true
		},
		'a' : {
			alias: 'app',
			describe: 'Path to application root',
			default: process.cwd()
		},
		'p' : {
			alias: 'port',
			describe: 'Port for Apimok server',
			default: 3001
		},
		'm' : {
			describe: 'Run server in manual standalone mode(no PhantomJs)'
		},
		'x' : {
			alias: 'xml',
			describe: 'Location to output JUnit Xml Results.',
			default: process.cwd()
		}
	}).argv;
	
server.start(argv.app, argv.port);

if(!argv.m){
	//Run tests in phantomjs
	var phantom = spawn('phantomjs', [__dirname + '/../run-jasmine.js', 'http://localhost:' + argv.port + '/' + argv.target, argv.xml]);


	phantom.stdout.on('data', function (data) {
	  console.log('stdout: ' + data);
	  if(data.toString().indexOf('Error') != -1){
	  	console.log('Exiting with errors');
	  	process.exit(1);
	  }
	});

	phantom.stderr.on('data', function (data) {
	  console.log('stderr: ' + data);
	  console.log('Exiting with errors');
	  process.exit(1);
	});

	phantom.on('exit', function (code) {
	  console.log('Exiting');
	  process.exit(0);
	});
} else {
	console.log('Server running in manual standalone mode');
}